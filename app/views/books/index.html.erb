<header>
    <h1>Books</h1>
</header>

<main>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @books.each do |book| %>
    <tbody>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td></td>
    </tr>

    </tbody>

<% end %>
</table>


    <h2>New book</h2>

    <%= form_for(@book) do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Body</h4>
        <%= f.text_area :body %><br>

        <%= f.submit 'Create Book' %>

    <% end %>
</main>